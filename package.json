{
  "name": "graphql-modules-apollo-typegraphql",
  "version": "1.0.0",
  "description": "A implementation of GraphQL Modules / Apollo Server / TypeGraphQL",
  "author": "cobraz",
  "main": "build/app/index.js",
  "scripts": {
    "start": "node build/app/index.js",
    "test": "jest --coverage src",
    "build": "tsc",
    "lint": "eslint --ignore-path .gitignore --ext ts ./src",
    "watch": "ts-node-dev --project ./tsconfig.json --respawn src/app/index.ts"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": -10
      }
    },
    "preset": "ts-jest",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/__fixtures__/",
      "<rootDir>/build"
    ]
  },
  "devDependencies": {
    "@types/faker": "^5.1.5",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^26.0.20",
    "@types/node": "~14.14.24",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "eslint": "^7.20.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "faker": "^5.3.1",
    "jest": "^24.8.0",
    "ts-jest": "^24.3.0",
    "ts-node-dev": "^1.1.1",
    "typescript": "^3.5.3",
    "braces": ">=2.3.1"
  },
  "dependencies": {
    "@graphql-modules/core": "^0.7.17",
    "@graphql-modules/di": "^0.7.17",
    "apollo-server": "^2.19.2",
    "graphql": "^14.7.0",
    "graphql-tag": "^2.11.0",
    "obf-property-client": "^1.2.0",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^0.17.6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cobraz/graphql-modules-apollo-typegraphql.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/cobraz/graphql-modules-apollo-typegraphql/issues"
  },
  "homepage": "https://github.com/cobraz/graphql-modules-apollo-typegraphql#readme"
}
